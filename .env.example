# ============================================
# MANDATORY - Bot won't start without these
# ============================================

# Database (Docker creates this automatically)
DATABASE_URL=postgresql://jobbot:jobbot_secure_pass@localhost:5432/jobbot
REDIS_URL=redis://localhost:6379

# Telegram Bot (for notifications)
# 1. Open Telegram, search @BotFather
# 2. Send /newbot, follow prompts
# 3. Copy token here
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# ============================================
# AI PROVIDER - Choose ONE (Groq is FREE)
# ============================================

# Which AI to use: groq (FREE), gemini (FREE), or openai (paid)
AI_PROVIDER=groq

# OPTION 1: Groq - FREE, RECOMMENDED
# Sign up: https://console.groq.com/ (takes 30 seconds)
# Uses Llama 3.3 70B - very capable, very fast
GROQ_API_KEY=gsk_xxxxxxxxxxxxxxxxxxxx

# OPTION 2: Google Gemini - FREE (1500 requests/day)
# Sign up: https://aistudio.google.com/
GEMINI_API_KEY=

# OPTION 3: OpenAI - PAID (~$10-30/month)
# Sign up: https://platform.openai.com/
OPENAI_API_KEY=

# ============================================
# SCRAPING PLATFORMS (All Optional)
# ============================================

# LinkedIn - RISKY, disabled by default
# Only enable if you accept the risk of account blocking
LINKEDIN_ENABLED=false
LINKEDIN_EMAIL=
LINKEDIN_PASSWORD=

# Naukri - Good for India jobs
NAUKRI_EMAIL=your-naukri-email
NAUKRI_PASSWORD=your-naukri-password

# Indeed - Works without login
INDEED_EMAIL=
INDEED_PASSWORD=

# ============================================
# FREE JOB APIS (All Optional)
# These work WITHOUT any API keys!
# ============================================

# Remotive, RemoteOK, Arbeitnow - ALWAYS FREE, NO KEY NEEDED
# They are enabled by default!

# Adzuna - FREE tier (250 requests/month)
# Register: https://developer.adzuna.com/
ADZUNA_APP_ID=
ADZUNA_APP_KEY=

# JSearch (RapidAPI) - FREE tier (500 requests/month)
# Register: https://rapidapi.com/letscrape-6bRBa3QguO5/api/jsearch
RAPIDAPI_KEY=

# FindWork - FREE tier
# Register: https://findwork.dev/developers/
FINDWORK_API_KEY=

# ============================================
# OPTIONAL SETTINGS
# ============================================

# CAPTCHA solving (only if needed)
TWO_CAPTCHA_API_KEY=

# Proxy (only if getting blocked)
PROXY_ENABLED=false
PROXY_URL=

# Application settings
AI_MATCH_THRESHOLD=0.7
MAX_DAILY_APPLICATIONS=50
SCRAPE_INTERVAL_HOURS=4
APPLICATION_DELAY_MS=30000

# Environment
NODE_ENV=development
LOG_LEVEL=info
