{
  "name": "job-application-bot",
  "version": "1.0.0",
  "description": "Automated job application bot for multiple platforms",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "command-center": "tsx src/command-center.ts",
    "command-center:scheduler": "tsx src/command-center.ts --scheduler",
    "dashboard": "tsx src/command-center.ts",
    "search": "tsx src/search-jobs.ts",
    "search:web": "tsx src/search-jobs.ts",
    "monitor": "tsx src/monitor-careers.ts",
    "monitor:careers": "tsx src/monitor-careers.ts",
    "discover": "tsx src/discover-companies.ts",
    "discover:companies": "tsx src/discover-companies.ts",
    "import:companies": "tsx src/import-companies.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "job-application",
    "automation",
    "web-scraping",
    "playwright"
  ],
  "author": "Akash Patel",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "bullmq": "^5.1.0",
    "dotenv": "^16.4.0",
    "ioredis": "^5.3.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^8.0.1",
    "openai": "^4.28.0",
    "pdf-parse": "^1.1.1",
    "playwright": "^1.41.0",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "telegraf": "^4.15.0",
    "winston": "^3.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.10",
    "@types/pdf-parse": "^1.1.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "prisma": "^5.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
